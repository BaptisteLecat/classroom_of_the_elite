doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' type='text/css' href='/css/home/home.css')
  link(rel='stylesheet' type='text/css' href='/css/home/pop-up.css')
  link(rel='stylesheet' type='text/css' href='/css/home/select.css')
  link(rel='stylesheet' type='text/css' href='/css/form/input.css')
  link(rel='stylesheet' type='text/css' href='/css/form/item-card.css')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
  title Accueil
#modal.modal
  .modal-header
    h3.form-label Ajout d&apos;une question
    button.close-button(data-close-button='') &times;
  .modal-body
    .modal-body-content
      form
        label.form-label(for='question-content') Question
        input.form-input(name='question-content' id='question-content' type='text')
        label.form-label(for='goodanswer-content') R&eacute;ponse
        input.form-input(name='goodanswer-content' id='goodanswer-content' type='text')
        .form-input-container
          .input-container
            .input-container-wrapper(name='input-box-0')
              label.form-label(for='badanswer-0-content')
                | Mauvaise
                | r&eacute;ponse
              input.form-input(name='badanswer-content' type='text')
            .input-container-wrapper(name='input-box-1')
              label.form-label(for='badanswer-1-content')
                | Mauvaise
                | r&eacute;ponse
              input.form-input(name='badanswer-content' type='text')
          .input-container-center-btn
            button.input-container-btn-add(name='btn-add-badanswer')
              img(src='/assets/icons/plus.png' alt='add')
        label.form-label(for='goodanswer-content') Theme
        .modal-select-container
          details
            summary.select-content.form-select
              | Choisissez
              | un th&egrave;me
            ul.form-select
              each theme in themes 
                li.select-item(name= theme.id)
                  .select-item-content #{theme.label}
              
        label.form-label(for='goodanswer-content') Dur&eacute;e
        .form-input-container
          .item-card-list(name='item-card-list-time')
            each time, index in times
              if index == 0
                .item-card.item-card-selected(name= index)
                  p #{time.label}
                  p #{time.time}
              else
                .item-card(name= index)
                  p #{time.label}
                  p #{time.time}
        label.form-label(for='goodanswer-content') Difficult&eacute;
        .form-input-container
          .item-card-list(name='item-card-list-difficulty')
            each difficulty, index in difficulties
              if index == 0
                .item-card.item-card-selected(name= index)
                  p #{difficulty.label}
                  p #{difficulty.point}
              else
                .item-card(name= index)
                  p #{difficulty.label}
                  p #{difficulty.point}
        .modal-btn-container
          button.btn-submit Valider
        input(type='hidden' id='time_id' value='')
        input(type='hidden' id='difficulty_id' value='')
        input(type='hidden' id='theme_id' value='')
#overlay
img(src='/assets/pictures/background.png' alt='' srcset='')
.container(style="background-image:\
url('/assets/pictures/home-box.png')")
  h2 Ajouter des questions
  .spacer
  .headband
    h6 Chaque question est v&eacute;rifi&eacute;e par un Administrateur
  .btn-center
    button.btn-add(id="btn-form-submit" data-modal-target='#modal')
      img(src='/assets/icons/plus.png' alt='' srcset='')
script(src='/js/home/pop-up.js')
